{% extends 'base.html.twig' %}

{% block title %}Hello FortunediceController!
{% endblock %}

{% block body %}
	<style>
		/* Style the button */
		.shiny {
			display: inline-block;
			padding: 15px 30px;
			font-size: 1.5rem;
			color: #ffffff;
			text-decoration: none;
			background: linear-gradient(45deg,rgb(51, 214, 255), #ffcc33);
			border-radius: 30px;
			box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
			transition: all 0.3s ease;
			position: relative;
			overflow: hidden;
		}

		/* Add a shine effect */
		.shiny:before {
			content: '';
			position: absolute;
			top: -50%;
			left: -50%;
			width: 200%;
			height: 200%;
			background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.7), transparent);
			transform: rotate(45deg);
			opacity: 0;
			transition: all 0.5s ease-in-out;
		}

		/* Button hover effect */
		.shiny:hover {
			transform: translateY(-3px);
			box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3);
		}

		/* Shine effect on hover */
		.shiny:hover:before {
			opacity: 1;
			top: -150%;
			left: -150%;
			transform: rotate(45deg);
		}

		.center {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
			flex-direction: column;
		}
	</style>
	<div class="center">
		<p>Dice result : {{diceResult}}</p>
		<p class="shiny">This is your code : {{discountCode}}</p>
	</div>
{% endblock %}
